        "# Ask for the amounts\n",
        "pesos = float(input(\"Enter Colombian pesos: \"))\n",
        "soles = float(input(\"Enter Peruvian soles: \"))\n",
        "reais = float(input(\"Enter Brazilian reais: \"))\n",
        "\n",
        "# Calculate total in USD\n",
        "total_usd = (pesos * 0.00025) + (soles * 0.27) + (reais * 0.20)\n",
        "\n",
        "# Show result formatted\n",
        "print(f\"Total in USD: ${total_usd:.2f}\")"
      ]
